<div class="row">
  <div class="col-md-7">
    <h1><%= @sponsored_post.title %></h1>
  </div>
  <div class="col-md-1">
    <h1>
      <small class="text-muted">
        $<%= @sponsored_post.price %>
      </small>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsored_post.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_topic_sponsored_post_path(@sponsored_post.topic, @sponsored_post), class: "btn btn-success" %>
  </div>
</div>